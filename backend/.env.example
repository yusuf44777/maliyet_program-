APP_ENV=development

# PostgreSQL (prod için önerilen)
# Vercel/serverless ortamında Supabase direct host (db.<ref>.supabase.co:5432) IPv6 zorlayabilir.
# Bu yüzden "Connection Pooling / Transaction mode" URL kullanın (IPv4):
# postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=

# Güvenlik
AUTH_SECRET=change-this-with-openssl-rand-hex-32
AUTH_TOKEN_TTL_SECONDS=43200
AUTH_HASH_ITERATIONS=120000

# CORS (virgülle ayır)
# Örn: https://app.example.com,https://www.app.example.com
CORS_ORIGINS=http://localhost:5173

# Prod hardening
# (lokalde gerekiyorsa true yapabilirsiniz)
ENABLE_RELOAD_DB=false
SEED_DEFAULT_USERS=false
ENABLE_STARTUP_DATA_BOOTSTRAP=false
ENABLE_STARTUP_TEMPLATE_SYNC=false

# Varsayılan kullanıcı seed (opsiyonel; prod'da kapatılması önerilir)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_USER_USERNAME=user
DEFAULT_USER_PASSWORD=user123

# Template / Kargo dosyaları (lokal path veya URL)
TEMPLATE_PATH=
TEMPLATE_URL=https://[YOUR-PROJECT-REF].supabase.co/storage/v1/object/public/kargo/son_maliyet_sablonu.xlsx
KARGO_CSV_PATH=
KARGO_CSV_URL=https://[YOUR-PROJECT-REF].supabase.co/storage/v1/object/public/kargo/kargo.csv

# Remote file cache
REMOTE_FILE_CACHE_TTL=900
REMOTE_FILE_CACHE_DIR=/tmp/maliyet_cache
